# PythonAnywhere Production Environment Variables
FLASK_CONFIG=production
FLASK_ENV=production
FLASK_DEBUG=0

# IMPORTANT: Replace with your actual secret key
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database URL - PythonAnywhere MySQL
# Replace with your actual database credentials
DATABASE_URL=mysql://username:password@username.mysql.pythonanywhere-services.com/dbname

# Email settings (optional)
MAIL_SERVER=smtp.googlemail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com
